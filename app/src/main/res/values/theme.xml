<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- =================================================================== -->
	<!-- Complete themes -->
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	
	<style name="Theme.Junkie" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <!--item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item-->
		<item name="android:windowBackground">@drawable/bkg_activity</item>
		<item name="android:selectableItemBackground">@drawable/bkg_selectableitem</item>
	</style>
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	
	<style name="Theme.Junkie.Chapter" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Chapter</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:selectableItemBackground">@drawable/bkg_selectableitem_white</item>
	</style>
	
	<!-- =================================================================== -->
	<!-- Widget styles -->
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	
	<style name="Widget.Styled.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
	    <item name="android:background">@drawable/bkg_actionbar</item>
		<item name="android:icon">@drawable/ic_logo</item>
		<item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
	</style>
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	
	<style name="Widget.Styled.ActionBar.Chapter" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
	    <item name="android:background">@drawable/bkg_actionbar_transparent</item>
	</style>
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	
</resources>